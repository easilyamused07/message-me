<%= render 'shared/errors', obj: @user %>
<div class="ui inverted segment" id="signup-box">
  <%= form_for(:user, html: {class: "ui form", role: "form"}, url: signup_path) do |f| %>
  <h1 class="h1">Sign up for Message-Me!</h1>		
  <div class="ui inverted form error">
    <div class="required field">
      <label>Email</label>
      <%= f.text_field :email, placeholder:"Email" %>
    </div>
    <div class="required field">
      <label>Username</label>
      <%= f.text_field :username, placeholder:"Username" %>
    </div>
    <div class="required field">
      <label>Password</label>
      <%= f.text_field :password, placeholder:"Password" %>
    </div>
    <div class="field">
    <%= f.submit class:"ui button" %>
    </div>
  <% end %>
</div>

